<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".BioData">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/baris1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/rubik_regular"
                android:text="Beres! Sekarang "
                android:textSize="25dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/baris12"
                android:layout_toRightOf="@+id/baris1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_regular"
                android:layout_marginTop="50dp"
                android:text="Kamu"
                android:textSize="25dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/baris2"
                android:layout_below="@id/baris1"
                android:layout_width="234dp"
                android:layout_height="wrap_content"

                android:fontFamily="@font/rubik_regular"
                android:text="Udah bisa ngecek penggunaan hp mu tiap hari buat bantu"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/baris22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="140dp"
                android:layout_toRightOf="@+id/baris2"
                android:fontFamily="@font/rubik_regular"
                android:text="Kamu"
                android:textSize="25dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/baris3"
                android:layout_below="@+id/baris2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:fontFamily="@font/rubik_regular"
                android:text="ngatur waktu :)"
                android:textSize="25dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/abu"
            android:padding="30dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_mulai"
                android:onClick="pindahuser"
                android:text="Selanjutnya"
                android:textAllCaps="false" />
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>